<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<GridPane prefHeight="450" prefWidth="450" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controller.SelectSceneController">
   <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" prefWidth="300" percentWidth="100" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints prefHeight="30" />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints prefHeight="30" />
   </rowConstraints>
   <padding>
      <Insets bottom="10" left="10" right="10" top="10" />
   </padding>
      <Label GridPane.rowIndex="0" text="Select sentence">
         <font>
            <Font size="20.0"/>
         </font>
      </Label>
      <TableView GridPane.rowIndex="1"
                 fx:id="tableView" editable="true">
         <columns>
            <TableColumn fx:id="checkBoxColumn" prefWidth="40" style="-fx-alignment: CENTER;" >
<!--               <cellValueFactory>-->
<!--                  <PropertyValueFactory property="checkBox"  />-->
<!--               </cellValueFactory>-->
            </TableColumn>
            <TableColumn text="Sentence" fx:id="sentenceColumn"/>
         </columns>
      </TableView>
      <HBox style="-fx-padding:10 0 0 0" spacing="10" alignment="BOTTOM_RIGHT" GridPane.rowIndex="2">
         <Button mnemonicParsing="false" onAction="#gotoUpdate">
             <graphic>
                 <FontAwesomeIconView glyphName="ARROW_LEFT" />
             </graphic>
         </Button>
         <Button mnemonicParsing="false" onAction="#gotoResult">
             <graphic>
                 <FontAwesomeIconView glyphName="ARROW_RIGHT"/>
             </graphic>
         </Button>
      </HBox>
</GridPane>

